<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        style="@style/Text.28"
        android:text="@string/tv_player"
        app:layout_constraintEnd_toEndOf="@id/iv_player"
        app:layout_constraintStart_toStartOf="@id/iv_player"
        app:layout_constraintBottom_toTopOf="@id/iv_player" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.28"
        android:gravity="center"
        android:text="@string/tv_com"
        app:layout_constraintStart_toStartOf="@id/iv_com"
        app:layout_constraintBottom_toTopOf="@id/iv_com"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@id/iv_com" />


    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_125sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_com"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_115sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_rock"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_12sdp"
            android:layout_weight="1"
            android:background="@drawable/image_bg"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_rock" />

        <ImageView
            android:id="@+id/iv_scissor"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:elevation="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/image_bg"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_scissor" />

        <ImageView
            android:id="@+id/iv_paper"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:elevation="@dimen/_12sdp"
            android:layout_weight="1"
            android:background="@drawable/image_bg"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_paper" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>